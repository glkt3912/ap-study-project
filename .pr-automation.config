# PR自動化設定ファイル
# このファイルをプロジェクトルートに配置してカスタマイズ

# プロジェクト構造設定
FRONTEND_DIR="ap-study-app"
BACKEND_DIR="ap-study-backend"
DOCS_DIRS=("docs")
SCRIPTS_DIR="scripts"

# ブランチ設定  
DEFAULT_BASE_BRANCH="main"
PR_BRANCH_PREFIX="feature/"

# TDD設定
TDD_ENABLED=true
TDD_SCRIPTS_PATH="./scripts/tdd-helper.sh"

# 品質チェック設定
FRONTEND_LINT_CMD="npm run lint"
FRONTEND_BUILD_CMD="npm run build"
BACKEND_LINT_CMD="npm run build"
BACKEND_TEST_CMD="npm test"

# コミット設定
COMMIT_CONVENTION="conventional"  # conventional | simple
COMMIT_SIGNATURE_EXCLUDE=true     # Claude Code署名を除外

# PR設定
PR_TITLE_LANG="ja"               # ja | en
PR_AUTO_MERGE=false              # 自動マージ無効
PR_DRAFT_DEFAULT=false           # デフォルトでドラフトPRしない

# プロジェクト固有設定
PROJECT_TYPE="web-app"           # web-app | library | cli | other
LANGUAGE_STACK=("typescript" "javascript" "shell")